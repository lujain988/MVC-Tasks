@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title">

    @if (ViewBag.Message != null)
    {
        if (ViewBag.status == "success")
        {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @ViewBag.Message
            </div>
        }
    }

    <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
        </div>
        <div class="form-group">
            <label for="Subject">Subject</label>
            <input type="text" class="form-control" id="Subject" name="Subject" required />
        </div>
        <div class="form-group">
            <label for="Message">Message</label>
            <textarea class="form-control" id="Message" name="Message" rows="5" required></textarea>
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
    
    @if (ViewBag.status == "success" && ViewBag.ContactDetails != null)
    {
        <h2>Contact Details</h2>

        <div class="form-group">
            <label>Name:</label>
            <p>@ViewBag.ContactDetails["Name"]</p>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <p>@ViewBag.ContactDetails["Email"]</p>
        </div>
        <div class="form-group">
            <label>Phone Number:</label>
            <p>@ViewBag.ContactDetails["PhoneNumber"]</p>
        </div>
        <div class="form-group">
            <label>Subject:</label>
            <p>@ViewBag.ContactDetails["Subject"]</p>
        </div>
        <div class="form-group">
            <label>Message:</label>
            <p>@ViewBag.ContactDetails["Message"]</p>
        </div>
    }
</main>