@model IEnumerable<Code.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().age)
        </th>
        <th>
            Courses
        </th>
        <th></th>
    </tr>

    @foreach (var teacher in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => teacher.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.age)
            </td>
            <td>
                @if (teacher.Courses != null && teacher.Courses.Any())
                {
                    <ul>
                        @foreach (var course in teacher.Courses)
                        {
                            <li>@course.ClassName</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No courses assigned.</p>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = teacher.ID }) |
                @Html.ActionLink("Details", "Details", new { id = teacher.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = teacher.ID })
            </td>
        </tr>
    }

</table>
